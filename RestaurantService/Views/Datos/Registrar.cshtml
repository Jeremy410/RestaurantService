@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/style.css")
<br />
<div class="form" style="width: 80%; ">
    <h2 style="text-align: center; font-weight: bold;">INFORMACION PERSONAL</h2>
    <hr style="border: 1px solid #ccc; width: 80%;" />
    
    <form action="" method="post">
        <p class="contact"><label for="name">Nombre</label></p>
        <input id="name" name="name" placeholder="Nombre" required tabindex="1" type="text">

        <p class="contact"><label for="name">Apellido</label></p>
        <input id="name" name="name" placeholder="Apellido" required tabindex="1" type="text">

        <p class="contact"><label for="email">Email</label></p>
        <input id="email" name="email" placeholder="Example@domain.com" required type="email">

        <p class="contact"><label for="username">Usuario</label></p>
        <input id="username" name="username" placeholder="Nombre Usuario" required tabindex="2" type="text">

        <p class="contact"><label for="password">Contraseña</label></p>
        <input type="password" id="password" name="password" required>
        <p class="contact"><label for="repassword">Confirmar Contraseña</label></p>
        <input type="password" id="repassword" name="repassword" required><br />

        <p class="contact"><label for="fecha">Fecha de Nacimiento</label></p>
        <input type="date" name="date" required><br />

        <input class="buttom" name="submit" id="submit" tabindex="5" value="Registrarme" type="submit">
    </form>
</div>
<br />

