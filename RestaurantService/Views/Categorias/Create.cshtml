@model RestaurantService.Models.Categoria

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Crear", "Categorias", FormMethod.Post, new { enctype = "multipart/form-data"})) 
{
    <div class="form-horizontal">
        <h4>Categoria</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" required name="Nombre" placeholder="Nombre Categoria"/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Portada, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <input type="file" name="fileUpload"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
